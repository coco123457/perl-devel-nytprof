HV*
load_profile_data_from_file(file=NULL)
	char *file;
	CODE:
	init_runtime();

	if (strEQ(file,"STDIN")) {
		int fd = dup(STDIN_FILENO);
		if (-1 == fd)
			croak("Unable to dup stdin: %s", strerror(errno));
		in = fdopen(fd, "r");
	}
	else {
		in = fopen(file, "rb");
	}
	if (in == NULL) {
		croak("Failed to open input '%s': %s", file, strerror(errno));
	}
	RETVAL = load_profile_data_from_stream();
	fclose(in);
	OUTPUT:
	RETVAL


